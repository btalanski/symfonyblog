{% extends 'admin/base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
<section class="section">
    <div class="container">
        <h1 class="title">Users</h1>
        {% if users|length > 0 %}

        <table class="table is-striped is-fullwidth">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                <tr>
                    <th>{{user.id}}</th>
                    <td>{{user.name}}</td>
                    <td>{{user.email}}</td>                  
                    <td><a class="button" href="{{ path('user_edit', {id: user.id})}}">Edit</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% endif %}
    </div>
</section>
{% endblock %}